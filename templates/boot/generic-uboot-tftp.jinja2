{%- extends 'boot/generic-base-boot.jinja2' %}
{%- set boot_method = "u-boot" %}
{%- block main %}
{{ super() }}
{%- if rootfs_type == 'nbd' %}
protocols:
  lava-xnbd:
    port: auto
{%- endif %}
{% endblock %}
{%- block boot %}
{{ super() }}
    type: {{ uboot_type|default("bootm") }}
    commands: {{ boot_commands|default("ramdisk") }}
{%- endblock %}
{%- block deploy -%}
{{ super() }}
    kernel:
      url: {{ kernel_url }}
{%- if rootfs_type == 'nfs' %}
    nfsrootfs:
      url: {{ nfsrootfs_url }}
      compression: {{ nfsroot_compression }}
{%- elif rootfs_type == 'nbd' %}
    initrd:
      url: {{ nbdinitrd_url }}
      allow_modify: false
    nbdroot:
      url: {{ nbdroot_url }}
      compression: {{ nbdroot_compression }}
{%- endif %}
{%- if initrd_url and rootfs_type != 'nbd' %}
    ramdisk:
      url: {{ initrd_url }}
      compression: {{ initrd_compression }}
{%- endif %}
{%- if modules_url %}
    modules:
      url: {{ modules_url }}
      compression: {{ modules_compression }}
{%- endif %}
{%- if dtb_url %}
    dtb:
      url: {{ dtb_url }}
{%- endif %}
{%- endblock %}
